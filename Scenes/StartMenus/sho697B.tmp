var page3 : int = -1;
var currect_page = -1;

const SOUND_YES : Array[AudioStream] = [
	preload(\"res://Audio/VilligerSound/Villager_yes1.ogg\"),
	preload(\"res://Audio/VilligerSound/Villager_yes2.ogg\"),
	preload(\"res://Audio/VilligerSound/Villager_yes3.ogg\")
